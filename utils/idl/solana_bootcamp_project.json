      "msg": "Cannot purchase more than 5 tickets"
    },
    {
      "code": 6001,
      "name": "NoTicketsAvailable",
      "msg": "No tickets available"
    },
    {
      "code": 6002,
      "name": "InvalidQuantity",
      "msg": "Invalid quantity"
    }
  ]
