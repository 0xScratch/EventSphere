          "isSigner": true
        },
        {
          "name": "user",
          "isMut": true,
          "isSigner": true
        },
        {
          "name": "systemProgram",
          "isMut": false,
          "isSigner": false
        }
      ],
      "args": [
        {
          "name": "organizer",
          "type": "publicKey"
        },
        {
          "name": "name",
          "type": "string"
        },
        {
          "name": "description",
          "type": "string"
        },
        {
          "name": "location",
          "type": "string"
        },
        {
          "name": "date",
          "type": "i64"
        },
        {
          "name": "ticketQuantity",
          "type": "u32"
        },
        {
          "name": "ticketPrice",
          "type": "u64"
        },
        {
          "name": "ticketsMinted",
          "type": "u32"
        }
      ]
    },
    {
      "name": "purchaseTickets",
      "accounts": [
        {
          "name": "user",
          "isMut": true,
          "isSigner": true
        },
        {
          "name": "event",
          "isMut": true,
          "isSigner": false
        },
        {
          "name": "ticketPurchase",
          "isMut": true,
          "isSigner": false
        },
        {
          "name": "systemProgram",
          "isMut": false,
          "isSigner": false
        }
      ],
      "args": [
        {
          "name": "quantity",
          "type": "u32"
        }
      ]
    }
  ],
  "accounts": [
    {
      "name": "EventContract",
      "type": {
        "kind": "struct",
        "fields": [
          {
            "name": "organizer",
            "type": "publicKey"
          },
          {
            "name": "name",
            "type": "string"
          },
          {
            "name": "description",
            "type": "string"
          },
          {
            "name": "location",
            "type": "string"
          },
          {
            "name": "date",
            "type": "i64"
          },
          {
            "name": "ticketQuantity",
            "type": "u32"
          },
          {
            "name": "ticketPrice",
            "type": "u64"
          },
          {
            "name": "ticketsMinted",
            "type": "u32"
          },
          {
            "name": "soulBoundTokenMint",
            "type": "string"
          }
        ]
      }
    },
    {
      "name": "TicketPurchase",
      "type": {
        "kind": "struct",
        "fields": [
          {
            "name": "user",
            "type": "publicKey"
          },
          {
            "name": "eventId",
            "type": "publicKey"
          },
          {
            "name": "tokenIds",
            "type": {
              "vec": "publicKey"
            }
          },
          {
            "name": "quantity",
            "type": "u32"
          },
          {
            "name": "timestamp",
            "type": "i64"
          }
        ]
      }
    }
  ],
  "errors": [
    {
      "code": 6000,
